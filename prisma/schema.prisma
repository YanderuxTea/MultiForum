generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_DATABASE_URL")
}

enum VerificationStatus {
  Yes
  No
}

model Users {
  id               String             @id @default(uuid())
  login            String             @unique
  password         String
  email            String             @unique
  role             String             @default("User")
  avatar           String?
  verification     String
  verificationAdm  VerificationStatus @default(No)
  createdAt        DateTime           @default(now())
  recoveryCode     String?
  dateRecoveryCode DateTime?
  devices          Devices[]
  warns            Warns[]
  bans             Bans[]
  Unwarns          Unwarns[]
  Unbans           Unbans[]
  Posts            Posts[]
  MessagesPosts    MessagesPosts[]
}

model Categories {
  id            String          @id @default(uuid())
  title         String
  position      Int
  subCategories SubCategories[]
}

model SubCategories {
  id           String     @id @default(uuid())
  title        String
  idCategories String
  Categories   Categories @relation(fields: [idCategories], references: [id], onDelete: Cascade)
  posts        Posts[]
}

model Posts {
  id              String          @id @default(uuid())
  title           String
  idSubCategories String
  SubCategories   SubCategories   @relation(fields: [idSubCategories], references: [id], onDelete: Cascade)
  idUser          String
  Users           Users           @relation(fields: [idUser], references: [id])
  createdAt       DateTime        @default(now())
  locked          Boolean
  MessagesPosts   MessagesPosts[]
}

model MessagesPosts {
  id        String   @id @default(uuid())
  text      String
  createdAt DateTime @default(now())
  idUser    String
  Users     Users    @relation(fields: [idUser], references: [id])
  idPosts   String
  Posts     Posts    @relation(fields: [idPosts], references: [id], onDelete: Cascade)
}

model Devices {
  id         String @id @default(uuid())
  userId     String
  user       Users  @relation(fields: [userId], references: [id])
  token      String @unique
  deviceType String
  deviceId   String @unique
}

model Warns {
  id      String   @id @default(uuid())
  idUser  String
  reason  String
  date    DateTime @default(now())
  user    Users    @relation(fields: [idUser], references: [id])
  admin   String
  Unwarns Unwarns?
}

model Bans {
  id     String   @id @default(uuid())
  idUser String
  reason String
  date   DateTime @default(now())
  time   Int
  user   Users    @relation(fields: [idUser], references: [id])
  admin  String
  Unbans Unbans?
}

model Unwarns {
  id     String   @id @default(uuid())
  idWarn String   @unique
  warn   Warns    @relation(fields: [idWarn], references: [id])
  idUser String
  reason String
  date   DateTime @default(now())
  user   Users    @relation(fields: [idUser], references: [id])
  admin  String
}

model Unbans {
  id     String   @id @default(uuid())
  idBan  String   @unique
  ban    Bans     @relation(fields: [idBan], references: [id])
  idUser String
  reason String
  date   DateTime @default(now())
  user   Users    @relation(fields: [idUser], references: [id])
  admin  String
}
