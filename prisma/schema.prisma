generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_DATABASE_URL")
}

enum VerificationStatus {
  Yes
  No
}

model Users {
  id               String             @id @default(uuid())
  login            String             @unique
  password         String
  email            String             @unique
  role             String             @default("User")
  avatar           String?
  verification     String
  verificationAdm  VerificationStatus @default(No)
  createdAt        DateTime           @default(now())
  recoveryCode     String?
  dateRecoveryCode DateTime?
  topic            Topic[]
  posts            Posts[]
  devices          Devices[]
  warns            Warns[]
  bans             Bans[]
  Unwarns          Unwarns[]
  Unbans           Unbans[]
}

model Category {
  id    String  @id @default(uuid())
  title String
  topic Topic[]
}

model Topic {
  id         String   @id @default(uuid())
  title      String
  categoryId String
  category   Category @relation(fields: [categoryId], references: [id])
  authorId   String
  author     Users    @relation(fields: [authorId], references: [id])
  createdAt  DateTime @default(now())
  posts      Posts[]
}

model Posts {
  id        String   @id @default(uuid())
  content   String
  topicId   String
  topic     Topic    @relation(fields: [topicId], references: [id])
  authorId  String
  author    Users    @relation(fields: [authorId], references: [id])
  createdAt DateTime @default(now())
}

model Devices {
  id         String @id @default(uuid())
  userId     String
  user       Users  @relation(fields: [userId], references: [id])
  token      String @unique
  deviceType String
  deviceId   String @unique
}

model Warns {
  id      String   @id @default(uuid())
  idUser  String
  reason  String
  date    DateTime @default(now())
  user    Users    @relation(fields: [idUser], references: [id])
  admin   String
  Unwarns Unwarns?
}

model Bans {
  id     String   @id @default(uuid())
  idUser String
  reason String
  date   DateTime @default(now())
  time   Int
  user   Users    @relation(fields: [idUser], references: [id])
  admin  String
  Unbans Unbans?
}

model Unwarns {
  id     String   @id @default(uuid())
  idWarn String   @unique
  warn   Warns    @relation(fields: [idWarn], references: [id])
  idUser String
  reason String
  date   DateTime @default(now())
  user   Users    @relation(fields: [idUser], references: [id])
  admin  String
}

model Unbans {
  id     String   @id @default(uuid())
  idBan  String   @unique
  ban    Bans     @relation(fields: [idBan], references: [id])
  idUser String
  reason String
  date   DateTime @default(now())
  user   Users    @relation(fields: [idUser], references: [id])
  admin  String
}
