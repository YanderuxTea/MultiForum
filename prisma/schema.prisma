generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum VerificationStatus {
  Yes
  No
}

model users {
  id              String             @id @default(uuid())
  login           String             @unique
  password        String
  email           String             @unique
  role            String             @default("User")
  verification    String
  verificationAdm VerificationStatus @default(No)
  createdAt       DateTime           @default(now())
}
